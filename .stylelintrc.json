{
    "extends": "stylelint-config-standard",
    "plugins": [
        "stylelint-prettier",
        "stylelint-order"
    ],
    "rules": {
        "prettier/prettier": true,
        "order/order": [
            "custom-properties",
            "declarations"
        ],
        "order/properties-alphabetical-order": true,
        "custom-property-pattern": null
    }
}
